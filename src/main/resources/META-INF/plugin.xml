<idea-plugin version="2">
    <id>Samebug</id>
    <name>Samebug</name>
    <vendor email="hello@samebug.io" url="http://samebug.io">Samebug</vendor>

    <description><![CDATA[
      Automated stack search integration from <a href="https://samebug.io">samebug.io</a>
      <ul>
        <li>Captures stack traces on your debug console</li>
        <li>search solutions on Samebug</li>
        <li>preserves your exception history</li>
      </ul>
    ]]></description>

    <change-notes><![CDATA[
      <ul>
        <li>Basic profile</li>
        <li>More convenient config</li>
        <li>Stack traces are highlighted in the console gutter</li>
        <li>Integration in run, debug, test and logcat consoles</li>
        <li>Notifications are turned off by default</li>
        <li>Fixes for marking solution</li>
      </ul>

      Check it at <a href="https://medium.com/@samebug/samebug-integration-0-12-0-525dade4d7b6">our blog</a>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Samebug" icon="/com/samebug/toolwindow/samebug.png" anchor="right"
                    factoryClass="com.samebug.clients.idea.ui.controller.SamebugToolWindowFactory"/>
        <applicationConfigurable groupId="tools" id="Settings.Samebug" displayName="Samebug"
                                 instance="com.samebug.clients.idea.ui.controller.ConfigDialog"/>
    </extensions>

    <actions>
        <group id="Samebug.ToolWindowMenu" text="Samebug menu" description="Samebug menu">
            <action id="Samebug.Configure" class="com.samebug.clients.idea.actions.ConfigureAction"
                    icon="/com/samebug/icons/cogwheel.png" text="Configure Samebug" description="Set Samebug API key"/>
        </group>
        <group id="Samebug.SearchTabMenu" text="Samebug search tab menu" description="Search tab menu">
            <action id="Samebug.BackToHistory" class="com.samebug.clients.idea.actions.ShowHistoryAction"
                    icon="/com/samebug/icons/back.png" text="Show history" description="Show exception history"/>
            <action id="Samebug.ReloadSearch" class="com.samebug.clients.idea.actions.ReloadSearchAction"
                    icon="/com/samebug/icons/reload.png" text="Reload solutions" description="Reload solutions"/>
        </group>
        <action id="Samebug.Dialogs" class="com.samebug.clients.idea.actions.Analyze" text="Samebug Search" description="Stacktrace search with Samebug">
            <add-to-group group-id="AnalyzeMenu" anchor="last"/>
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.samebug.clients.idea.components.application.IdeaSamebugPlugin</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.application.StackTraceSearch</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.application.Tracking</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.application.TutorialApplicationComponent</implementation-class>
        </component>
    </application-components>
    <project-components>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.RunDebugWatcher</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.SearchResultNotifier</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.BatchStackTraceSearchNotifier</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.TutorialProjectComponent</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.ToolWindowController</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.SamebugProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>