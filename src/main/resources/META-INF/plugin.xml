<idea-plugin version="2">
    <id>Samebug</id>
    <name>Samebug</name>
    <vendor email="hello@samebug.io" url="http://samebug.io">Samebug</vendor>

    <description><![CDATA[
      Automated stack search integration from <a href="https://samebug.io">samebug.io</a>
      <ul>
        <li>Captures stack traces on your debug console</li>
        <li>search solutions on Samebug</li>
        <li>preserves your exception history</li>
      </ul>
    ]]></description>

    <change-notes><![CDATA[
      <ul>
        <li>Reduce the number of notifications during search</li>
        <li>Integrated search history in the tool window</li>
        <li>The toolbar is active while the project is indexing</li>
      </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    -->
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Samebug" icon="/icons/samebug/samebug-r270-13x13.png" anchor="right"
                    factoryClass="com.samebug.clients.idea.ui.SamebugToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="Samebug.ToolWindowMenu" text="Samebug menu" description="Samebug menu">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="Samebug.Settings" class="com.samebug.clients.idea.actions.SettingsAction"
                    icon="/icons/samebug/cogwheel.png" text="Settings" description="Change Samebug configuration"/>
            <action id="Samebug.History" class="com.samebug.clients.idea.actions.HistoryAction"
                    icon="/icons/samebug/history.png" text="History" description="Reload your crash history"/>
        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.samebug.clients.idea.components.application.IdeaSamebugPlugin</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.application.StackTraceSearch</implementation-class>
        </component>
    </application-components>
    <project-components>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.LogcatProcessWatcher</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.RunDebugWatcher</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.SearchResultNotifier</implementation-class>
        </component>
        <component>
            <implementation-class>com.samebug.clients.idea.components.project.BatchStackTraceSearchNotifier</implementation-class>
        </component>
    </project-components>
</idea-plugin>